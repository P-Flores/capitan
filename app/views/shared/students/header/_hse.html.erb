<% if @user.student? %>
  <div class="text-center hidden-xs">
    <h6>HSE</h6>
    <div class="c100 p82 small gray p0">
      <span>
        <%= "#{ percentage(@student_hse_points) }%" %>
      </span>
      <div class="slice">
        <div class="bar"></div>
        <div class="fill"></div>
      </div>
    </div>
    <div class="col-sm-12 text-center p-0">
      <p class="score mb-0">
        <span class="book"><%= @student_hse_points[:points] %></span>
        <span class="slash">/</span>
        <span class="thin gray-29"><%= @student_hse_points[:max] %></span>
      </p>
      <p class="fs-13 light">points</p>
    </div>
  </div>

  <div class="text-center hidden-lg hidden-sm hidden-md flex">
    <div class="c100 p82 small gray p0">
      <span>
        <%= "#{ percentage(@student_hse_points) }%" %>
      </span>
      <div class="slice">
        <div class="bar"></div>
        <div class="fill"></div>
      </div>
    </div>
    <div class="mt-7 m-0-xs">
      <h6 class="text-left pl-7 fs-15-xs mb-0-xs">HSE</h6>
      <span class="score mb-0 pl-7">
        <span class="book"><%= @student_hse_points[:points] %></span>
        <span class="slash">/</span>
        <span class="thin gray-29"><%= @student_hse_points[:max] %></span>
      </span>
      <span class="fs-13 light">points</span>
    </div>
  </div>
<% end %>
